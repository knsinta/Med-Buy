<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="InfoActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:id="@+id/firstCardView"
        android:layout_height="320dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivInfo"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/stetoskop"/>

            <TextView
                android:id="@+id/tvNamaAlatdiInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivInfo"
                android:text="Nama Alat"
                android:textColor="@android:color/holo_red_light"
                android:textSize="30sp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tvHargaAlat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 115.000"
                android:textColor="@android:color/holo_red_light"
                android:layout_alignRight="@+id/tvNamaAlatdiInfo"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@+id/ivInfo"
                android:layout_alignParentRight="true" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:id="@+id/secondCardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/firstCardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ibTambahJumlah"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="130dp"
                android:background="@drawable/plus"/>

            <TextView
                android:id="@+id/tvJumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="28sp"
                android:layout_toRightOf="@+id/ibTambahJumlah"/>


            <ImageButton
                android:id="@+id/ibKurangJumlah"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/tvJumlah"
                android:background="@drawable/minus"/>


            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/Stetoskop"
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_below="@+id/ibTambahJumlah"/>


            <Button
                android:id="@+id/bTambahKeKeranjang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tvInfo"
                android:background="#3F51B5"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Tambah Ke Keranjang"/>


        </RelativeLayout>






    </androidx.cardview.widget.CardView>


</RelativeLayout>


